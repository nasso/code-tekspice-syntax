{
  "name": "tekspice",
  "publisher": "nasso",
  "displayName": "tekspice",
  "description": "Language support for the configuration file format (*.nts) of the NanoTekSpice Epitech project.",
  "version": "0.0.1",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:nts"
  ],
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "nts",
        "aliases": [
          "NanoTekSpice Configuration",
          "nts"
        ],
        "extensions": [
          ".nts"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "nts",
        "scopeName": "source.nts",
        "path": "./syntaxes/nts.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^14.14.27",
    "@types/vscode": "^1.53.0",
    "tslint": "^6.1.3",
    "typescript": "^4.1.5"
  }
}
